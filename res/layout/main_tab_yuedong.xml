<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/yuedong_tv_music_name"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/make_music_simple"
                android:textColor="@color/main_blue_light"
                android:textSize="@dimen/large_size" />

            <ImageButton
                android:id="@+id/yuedong_ib_set_as_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_favorite"
                android:contentDescription="@string/content_description"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/yuedong_tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/main_blue_light"
            android:textSize="@dimen/normal_size" />

        <TextView
            android:id="@+id/yuedong_tv_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/main_blue_light"
            android:textSize="@dimen/small_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6" >

        <ImageView
            android:id="@+id/miniplayer_iv_cd"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/music_disc_default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/main_blue_light"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/lyric_empty"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/yuedong_iv_voice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/volume_default" />

            <ImageView
                android:id="@+id/yuedong_iv_play_last"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_play_last"
                />

            <ImageView
                android:id="@+id/yuedong_iv_play"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_play"
                 />

            <ImageView
                android:id="@+id/yuedong_iv_play_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_play_next"
                />

            <ImageView
                android:id="@+id/yuedong_iv_play_mode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/play_mode_list_once"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
             >

            <TextView
                android:id="@+id/yuedong_tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="00:00"
                 android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
            
            <SeekBar
                android:id="@+id/yuedong_skb_progress"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip" />

            <TextView
                android:id="@+id/yuedong_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="00:00"
                 android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>